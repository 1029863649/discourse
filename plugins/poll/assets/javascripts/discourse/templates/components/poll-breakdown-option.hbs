<li class="poll-breakdown-option" {{on "mouseover" @onMouseOver}} {{on "mouseout" @onMouseOut}}>
  <span class="poll-breakdown-option-color" style={{this.colorStyle}}></span>

  <span class="poll-breakdown-option-count">
    {{#if showPercentage}}
      {{this.percent}}%
    {{else}}
      {{@option.votes}}
    {{/if}}
  </span>
  <span class="poll-breakdown-option-text">{{{@option.html}}}</span>
</li>
