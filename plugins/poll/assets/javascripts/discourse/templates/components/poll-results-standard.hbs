{{#each options as |option|}}
  <li>
    <div class="option">
      <p>
        <span class="percentage">{{option.percentage}}%</span>
        {{{option.html}}}
      </p>
    </div>
    <div class="bar-back">
      <div class="bar" style={{option.style}}></div>
    </div>

    {{#if isPublic}}
      {{poll-voters-standard option=option fetch='fetchUsers'}}
    {{/if}}
  </li>
{{/each}}
