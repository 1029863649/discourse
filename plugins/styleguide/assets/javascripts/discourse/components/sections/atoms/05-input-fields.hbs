      <div class="d-form-field__content">
        <div class="d-form-field__input-wrapper">
          <MultiSelect @content={{@dummy.options}} @onChange={{@dummyAction}} />
        </div>
        <div class="d-form-field__meta">
          <span class="d-form-field__meta-text">
