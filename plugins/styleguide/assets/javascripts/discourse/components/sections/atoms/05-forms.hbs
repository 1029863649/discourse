<StyleguideExample @title="Collection">
  <Form
    @data={{hash foo=(array (hash bar="1" baz="2") (hash bar="3" baz="4"))}}
    as |form|
  >
    <form.Button @action={{fn form.addItemToCollection "foo"}} @icon="plus" />
    <form.Collection @name="foo" as |collection index|>
      <form.Row as |row|>
        <row.Col @size={{6}}>
          <collection.Field
            @title="Bar"
            @name="bar"
            @showTitle={{false}}
            as |field|
          >
            <field.Input placeholder="Bar" />
          </collection.Field>
        </row.Col>
        <row.Col @size={{5}}>
          <collection.Field
            @title="Baz"
            @name="baz"
            @showTitle={{false}}
            as |field|
          >
            <field.Input placeholder="Baz" />
          </collection.Field>
        </row.Col>
        <row.Col @size={{1}}>
          <form.Button @action={{fn collection.remove index}} @icon="minus" />
        </row.Col>
      </form.Row>
    </form.Collection>
  </Form>
</StyleguideExample>

<StyleguideExample @title="Row/Col with titles">
  <Form as |form|>
    <form.Row as |row|>
      <row.Col @size={{6}}>
        <form.Field
          @title="Username"
          @name="username"
          @validation="required"
          as |field|
        >
