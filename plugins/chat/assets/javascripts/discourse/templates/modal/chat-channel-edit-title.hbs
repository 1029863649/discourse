<DModalBody @title="chat.channel_edit_title_modal.title">
  <span class="chat-channel-edit-title-modal__description">
    {{i18n "chat.channel_edit_title_modal.description"}}
  </span>

  <CharCounter
    @value={{this.editedTitle}}>
    <textarea
      {{on "input" (action this.onChangeChatChannelTitle value="target.value")}}
      class="chat-channel-edit-title-modal__title-input"
      placeholder={{i18n "chat.channel_edit_title_modal.input_placeholder"}}>{{@description}}</textarea>
  </CharCounter>
</DModalBody>

<div class="modal-footer">
  <DButton @class="btn-primary create" @action={{action "onSaveChatChannelTitle"}} @label="save" @disabled={{this.isSaveDisabled}} />
  <DModalCancel @close={{route-action "closeModal"}} />
</div>
