<div class="settings-editor settings">
  <div class="setting">
    <AceEditor
      @mode={{"html"}}
      @content={{this.editorContents}}
    />

    {{#each this.errors as |error|}}
      <div class="validation-error">
        <svg class="fa d-icon d-icon-times svg-icon svg-string" xmlns="http://www.w3.org/2000/svg">
          <use href="#times"></use>
        </svg>
        <b>{{error.setting}}</b>: {{error.errorMessage}}
      </div>
    {{/each}}
  </div>

  <div class="buttons">
    <DButton
      @action={{action "save"}}
      @class="btn-primary"
      @disabled={{this.saveButtonDisabled}}
      @translatedLabel="Save"
    />
  </div>
</div>
