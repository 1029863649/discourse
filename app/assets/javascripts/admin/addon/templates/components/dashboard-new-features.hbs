{{#if newFeatures}}
  <div class="section dashboard-new-features">
    <div class="section-title">
      <h2>🎁 {{i18n "admin.dashboard.new_features"}}</h2>

      {{d-button label="admin.dashboard.dismiss_new_features" action=dismissNewFeatures }}
    </div>

    <div class="section-body">
      {{#each newFeatures as |feature|}}
        {{dashboard-new-feature-item item=feature}}
      {{/each}}
    </div>
    <div class="section-body">
    </div>
  </div>
{{/if}}
