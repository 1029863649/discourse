{{body-class this.adminPageData.bodyClass}}

{{#if this.adminPageData.headerTitleLabel}}
  <DPageHeader
    @titleLabel={{i18n this.adminPageData.headerTitleLabel}}
    @descriptionLabel={{i18n this.adminPageData.descriptionLabel}}
  >
    <:breadcrumbs>
      <DBreadcrumbsItem @path="/admin" @label={{i18n "admin_title"}} />
      <DBreadcrumbsItem
        @path=""
        @label={{i18n this.adminPageData.headerTitleLabel}}
      />
    </:breadcrumbs>
  </DPageHeader>
{{/if}}

<AdminSiteSettingsFilterControls
  @initialFilter={{this.filter}}
  @onChangeFilter={{this.filterChanged}}
  @showMenu={{true}}
  @onToggleMenu={{this.toggleMenu}}
/>

<div class="admin-nav admin-site-settings-category-nav pull-left">
  <ul class="nav nav-stacked">
    {{#each this.visibleSiteSettings as |category|}}
      <li
        class={{concat-class
          "admin-site-settings-category-nav__item"
          category.nameKey
        }}
      >
        <LinkTo
          @route="adminSiteSettingsCategory"
          @model={{category.nameKey}}
          class={{category.nameKey}}
          title={{category.name}}
        >
          {{category.name}}
          {{#if category.count}}
            <span class="count">({{category.count}})</span>
          {{/if}}
        </LinkTo>
      </li>
    {{/each}}
  </ul>
</div>

<div class="admin-detail pull-left mobile-closed">
  {{outlet}}
</div>

<div class="clearfix"></div>