<DPageHeader
  @titleLabel={{i18n "admin.customize.font_style.title"}}
  @descriptionLabel={{i18n "admin.customize.font_style.header_description"}}
>
  <:breadcrumbs>
    <DBreadcrumbsItem @path="/admin" @label={{i18n "admin_title"}} />
    <DBreadcrumbsItem
      @path="/admin/customize/font"
      @label={{i18n "admin.customize.font_style.title"}}
    />
  </:breadcrumbs>
</DPageHeader>

<div class="admin-config-page__main-area">
  <AdminAreaSettings
    @area="font"
    @path="/admin/customize/font"
    @filter={{this.filter}}
    @adminSettingsFilterChangedCallback={{this.adminSettingsFilterChangedCallback}}
  />
</div>