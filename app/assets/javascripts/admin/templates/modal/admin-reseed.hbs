{{#d-modal-body title="admin.reseed.modal.title" subtitle="admin.reseed.modal.subtitle" class="reseed-modal"}}
  {{#conditional-loading-spinner condition=loading}}
    {{#if categories}}
      <fieldset>
        <legend>{{i18n "admin.reseed.modal.categories"}}</legend>

        {{#each categories as |category|}}
          <label>
            {{input type="checkbox" checked=category.selected}}
            {{category.name}}
          </label>
        {{/each}}
      </fieldset>
    {{/if}}

    <br>

    {{#if topics}}
      <fieldset>
        <legend>{{i18n "admin.reseed.modal.topics"}}</legend>

        {{#each topics as |topic|}}
          <label>
            {{input type="checkbox" checked=topic.selected}}
            {{topic.name}}
          </label>
        {{/each}}
      </fieldset>
    {{/if}}
  {{/conditional-loading-spinner}}
{{/d-modal-body}}

<div class="modal-footer">
  {{d-button action=(action "reseed") class="btn btn-danger" label="go_ahead" disabled=reseeding}}
  {{d-modal-cancel close=(route-action "closeModal")}}
</div>
