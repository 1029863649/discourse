{{#d-modal-body title="admin.backups.operations.backup.confirm"}}
  {{d-button
    class=(if adminBackupsLogs.status.strictBackup "btn-danger" "btn-primary")
    action=(action "startBackupWithUploads")
    label=withUploadsButtonLabel}}
  {{d-button
    action=(action "startBackupWithoutUploads")
    label=withoutUploadsButtonLabel}}
  {{d-button
    action=(action "cancel")
    label="no_value"}}
{{/d-modal-body}}
