
<div class='list'>
  <div class='well'>
  <ul class='nav nav-list'>
    {{#each content}}
    <li {{bindAttr class="this.selected:active"}}><a {{action selectPage this target="controller"}}>{{this.description}}</a></li>
    {{/each}}
  </ul>
  </div>

  <button {{action newPage target="controller"}} class='btn btn-primary'>{{i18n admin.pages.new}}</button> 
</div>

{{#if content.selectedItem}}
<div class='current-page'> 
  <div class='admin-controls'>
    <ul class="nav nav-pills">
      <li {{bindAttr class="view.pageActive:active"}}>
        <a {{action selectPage href="true" target="view"}}>{{i18n admin.pages.page}}</a>
      </li>
    </ul>
  </div>  

  {{#with content.selectedItem}}
    {{view Ember.TextField class="page-name" valueBinding="name"}} {{view Ember.TextField placeholderBinding="view.routePlaceholder" class="page-route" valueBinding="route"}}
    {{#if view.pageActive}}
      {{view Discourse.AceEditorView contentBinding="page" mode="html"}}
    {{/if}}
  {{/with}}
  <br>
  <div class='status-actions'>
    <span>{{i18n admin.pages.enabled}}  {{view Ember.Checkbox checkedBinding="content.selectedItem.enabled"}}</span>
    {{#unless content.selectedItem.changed}}
    <a class='preview-link' {{bindAttr href="content.selectedItem.previewUrl"}} target='_blank'>{{i18n admin.pages.preview}}</a>
    | 
    <a href="/?preview-page=" target='_blank'>{{i18n admin.pages.undo_preview}}</a><br>
    {{/unless}}
  </div>

  <div class='buttons'>
    <button {{action save target="controller"}} {{bindAttr disabled="content.selectedItem.disableSave"}} class='btn btn-primary'>{{i18n admin.pages.save}}</button> 
    <a {{action destroy target="controller"}} class='delete-link'>{{i18n admin.pages.delete}}</a> 
    <span class='saving'>{{content.savingStatus}}</span>
  </div>

</div>
{{/if}}
<div class='clearfix'></div>

