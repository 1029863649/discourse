<table>
  <tr>
    <th width="55%">{{i18n 'admin.backups.columns.filename'}}</th>
    <th width="10%">{{i18n 'admin.backups.columns.size'}}</th>
    <th>
      <div class="pull-right">
        {{resumable-upload target="/admin/backups/upload" success="uploadSuccess" error="uploadError" uploadText=uploadText}}
        {{d-button action='toggleReadOnlyMode' icon='eye' title=readOnlyModeTitleKey label=readOnlyModeTextKey disabled=readOnlyModeDisabled}}
      </div>
    </th>
  </tr>
  {{#each backup in model}}
    <tr>
      <td>{{backup.filename}}</td>
      <td>{{human-size backup.size}}</td>
      <td>
        <div class="pull-right">
          <a {{bind-attr href="backup.link"}} class="btn download" title="{{i18n 'admin.backups.operations.download.title'}}"><i class="fa fa-download"></i>{{i18n 'admin.backups.operations.download.text'}}</a>
          {{d-button class='btn-danger no-text' action='destroyBackup' actionParam=backup icon='trash-o' title=destroyTitleKey disabled=destroyDisabled}}
          {{d-button action='startRestore' actionParam=backup icon='play' title=restoreTitleKey label='admin.backups.operations.restore.text' disabled=restoreDisabled}}
        </div>
      </td>
    </tr>
  {{else}}
    <tr>
      <td>{{i18n 'admin.backups.none'}}</td>
      <td></td>
      <td></td>
    </tr>
  {{/each}}
</table>
