<div class="badges">
  <div class="badges-header">
    <h3 class="badges-heading">{{i18n 'admin.badges.title'}}</h3>
    <div class="create-new-badge">
      {{d-button 
        action=(action 'showBadge') 
        class='btn btn-primary' 
        icon='plus' 
        title='admin.badges.new' 
        label='admin.badges.new'
        href='/admin/badges/new'}}

      {{d-button 
        action=(action 'massAward') 
        class='btn btn-primary' 
        icon='certificate' 
        title='admin.badges.mass_award.button' 
        label='admin.badges.mass_award.button'
        href='/admin/badges/award/new'}}
    </div>
  </div>
  <div class='content-list'>
    <ul class="admin-badge-list">
      {{#each model as |badge|}}
        <li class="admin-badge-list-item">
          {{#link-to selectedRoute badge.id}}
            {{badge-button badge=badge}}
            {{#if badge.newBadge}}
              <span class="list-badge">{{i18n 'filters.new.lower_title'}}</span>
            {{/if}}
          {{/link-to}}
        </li>
      {{/each}}
    </ul>
  </div>
  {{outlet}}
</div>