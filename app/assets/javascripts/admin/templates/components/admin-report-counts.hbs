<td class="title">
  {{#if report.icon}}
    {{fa-icon report.icon}}
  {{/if}}
  <a href="{{report.reportUrl}}">{{report.title}}</a>
</td>
<td class="value">{{report.todayCount}}</td>
<td class="value {{report.yesterdayTrend}}" title={{report.yesterdayCountTitle}}>{{numberToDelimited report.yesterdayCount}} {{fa-icon "caret-up" class="up"}} {{fa-icon "caret-down" class="down"}}</td>
<td class="value {{report.sevenDayTrend}}" title={{report.sevenDayCountTitle}}>{{numberToDelimited report.lastSevenDaysCount}} {{fa-icon "caret-up" class="up"}} {{fa-icon "caret-down" class="down"}}</td>
<td class="value {{report.thirtyDayTrend}}" title={{report.thirtyDayCountTitle}}>{{numberToDelimited report.lastThirtyDaysCount}} {{fa-icon "caret-up" class="up"}} {{fa-icon "caret-down" class="down"}}</td>
<td class="value">{{numberToDelimited report.total}}</td>
