<ul class="choices">
  {{#each selectedContents as |selectedContent|}}
    <li class="selected-value">
      <span class="delete-icon" {{action onDeselect selectedContent.value bubbles=false}}>
        {{d-icon "times"}}
      </span>
      <span class="name">
        {{selectedContent.name}}
      </span>
    </li>
  {{else}}
    <li class="choice-placeholder">
      {{i18n text}}
    </li>
  {{/each}}
</ul>
