{{#unless isHidden}}
  {{!-- filter-input-search prevents 1password from attempting autocomplete --}}
  <Input tabindex={{0}} class="filter-input" placeholder={{placeholder}} autocomplete="off" @autocorrect="off" @autocapitalize="off" name="filter-input-search" spellcheck={{false}} @value={{readonly selectKit.filter}} @paste={{action "onPaste"}} @keyDown={{action "onKeydown"}} @keyUp={{action "onKeyup"}} @type="search" {{on "input" (action "onInput")}} />

  {{#if selectKit.options.filterIcon}}
    {{d-icon selectKit.options.filterIcon class="filter-icon"}}
  {{/if}}
{{/unless}}
