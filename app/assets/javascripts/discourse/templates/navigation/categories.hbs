{{bread-crumbs categories=categories}}

<ul class="nav nav-pills" id='navigation-bar'>
  {{#each navItem in navItems}}
    {{navigation-item content=navItem filterMode=filterMode}}
  {{/each}}
  {{custom-html "extraNavItem"}}
</ul>

{{#if canCreateCategory}}
  {{d-button class='btn-default' action='createCategory' icon='plus' label='category.create'}}
{{/if}}
{{#if canCreateTopic}}
  {{d-button id='create-topic' class='btn-default' action='createTopic' icon='plus' label='topic.create'}}
{{/if}}
