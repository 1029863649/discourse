{{#each buttons as |b|}}
  <button class="btn btn-social {{b.name}}" {{action "externalLogin" b}}>
    {{#if b.hasIcon}}
      {{d-icon b.name}}
    {{/if}}
    {{b.title}}
  </button>
{{/each}}

{{#if showLoginWithEmailLink}}
  {{d-button
    action="emailLogin"
    label="email_login.button_label"
    disabled=processingEmailLink
    icon="far-envelope"
    class="login-with-email-button"}}
{{/if}}
