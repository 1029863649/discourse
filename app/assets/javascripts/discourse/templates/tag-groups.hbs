<div class="container tag-groups-container">
  <h2>
    {{i18n "tagging.groups.title"}}
  </h2>
  <div class="content-list">
    <ul>
      {{#each model as |tagGroup|}}
        <li>
          <a
            class="{{if tagGroup.selected "active"}}"
            {{action "selectTagGroup" tagGroup}}
          >
            {{tagGroup.name}}
          </a>
        </li>
      {{/each}}
    </ul>
    <button class="btn btn-default" {{action "newTagGroup"}}>
      {{d-icon "plus"}}
      {{i18n "tagging.groups.new"}}
    </button>
  </div>
  {{outlet}}
  <div class="clearfix"></div>
</div>