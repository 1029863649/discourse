{{#d-modal-body title="do_not_disturb.title"}}
  <div class="do-not-disturb-choice">
    {{radio-button
      name="dnd-time"
      value="30"
      id="dnd-time-30"
      onChange=(action "setDuration")
    }}
    <label for="dnd-time-30">
      {{i18n "do_not_disturb.options.half_hour"}}
    </label>
  </div>
  <div class="do-not-disturb-choice">
    {{radio-button
      name="dnd-time"
      value="60"
      id="dnd-time-60"
      onChange=(action "setDuration")
    }}
    <label for="dnd-time-60">
      {{i18n "do_not_disturb.options.one_hour"}}
    </label>
  </div>
  <div class="do-not-disturb-choice">
    {{radio-button
      name="dnd-time"
      value="120"
      id="dnd-time-120"
      onChange=(action "setDuration")
    }}
    <label for="dnd-time-120">
      {{i18n "do_not_disturb.options.two_hours"}}
    </label>
  </div>
  <div class="do-not-disturb-choice">
    {{radio-button
      name="dnd-time"
      value="tomorrow"
      id="dnd-time-tomorrow"
      onChange=(action "setDuration")
    }}
    <label for="dnd-time-tomorrow">
      {{i18n "do_not_disturb.options.tomorrow"}}
    </label>
  </div>

{{/d-modal-body}}
<div class="modal-footer">
  {{d-button
    label="do_not_disturb.save"
    action=(action "save")
    class="btn-primary"
    disabled=saving
  }}
</div>
