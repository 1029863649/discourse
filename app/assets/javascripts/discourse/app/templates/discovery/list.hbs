<Discovery::Layout
  @category={{this.category}}
  @createTopicDisabled={{this.createTopicDisabled}}
>
  <:navigation>
    <Navigation::Default
      @category={{this.navigationArgs.category}}
      @filterType={{this.navigationArgs.filterType}}
      @noSubcategories={{this.navigationArgs.noSubcategories}}
      @canBulkSelect={{this.canBulkSelect}}
      @toggleBulkSelect={{this.toggleBulkSelect}}
      @createTopic={{this.createTopic}}
      @createTopicDisabled={{this.createTopicDisabled}}
    />
  </:navigation>
  <:list>
    <Discovery::Topics
      @period={{this.period}}
      @expandAllPinned={{this.expandAllPinned}}
      @expandAllGloballyPinned={{this.expandAllGloballyPinned}}
      @model={{this.model}}
      @bulkSelectEnabled={{this.bulkSelectEnabled}}
      @selected={{this.selected}}
      @canBulkSelect={{this.canBulkSelect}}
      @toggleBulkSelect={{this.toggleBulkSelect}}
    />
  </:list>
</Discovery::Layout>