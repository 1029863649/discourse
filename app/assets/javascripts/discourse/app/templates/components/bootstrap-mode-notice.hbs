{{#unless this.hidden}}
  <div class="row bootstrap-mode-notice">
    <div class="alert alert-info alert-bootstrap-mode">
      <div class="col-text">
        {{this.message}}
      </div>
      <div class="col-button">
        <div class="button bootstrap-invite-button"><DButton @icon="user-plus" @href="/my/invited" @class="btn-primary" @label="bootstrap_mode_banner.invite_button_title" /></div>
        {{#if this.wizardRequired}}
          <div class="link bootstrap-wizard-button"><a href="/wizard">{{i18n "bootstrap_mode_banner.wizard_link_title"}}</a></div>
        {{/if}}
      </div>
    </div>
  </div>
{{/unless}}
