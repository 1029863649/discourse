<div role="heading" aria-level="2" class="table-heading">
  {{i18n (concat "filters." this.filter ".title")}}
  <PluginOutlet @name="categories-topics-table-heading" @connectorTagName="div" />
</div>

{{#if this.topics}}
  {{#each this.topics as |t|}}
    <LatestTopicListItem @topic={{t}} />
  {{/each}}
  <div class="more-topics">
    {{#if this.orderTopicsBy}}
      <a href={{get-url (concat "/" this.filter "?order=" this.orderTopicsBy)}} class="btn btn-default pull-right">{{i18n "more"}}</a>
    {{else}}
      <a href={{get-url (concat "/" this.filter)}} class="btn btn-default pull-right">{{i18n "more"}}</a>
    {{/if}}
  </div>
{{else}}
  <div class="no-topics">
    <h3>{{i18n (concat "topics.none." this.filter)}}</h3>
  </div>
{{/if}}
