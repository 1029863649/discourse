<div class="{{this.class}} aspect-image" style={{this.style}}>
  {{#if (and this.category.uploaded_logo.url this.category.uploaded_logo_dark.url)}}
    <picture>
      <source srcset={{this.category.uploaded_logo_dark.url}} width={{this.category.uploaded_logo_dark.width}} height={{this.category.uploaded_logo_dark.height}} media="(prefers-color-scheme: dark)">
      <CdnImg @src={{this.category.uploaded_logo.url}} @width={{this.category.uploaded_logo.width}} @height={{this.category.uploaded_logo.height}}/>
    </picture>
  {{else if this.category.uploaded_logo.url}}
    <CdnImg @src={{this.category.uploaded_logo.url}} @width={{this.category.uploaded_logo.width}} @height={{this.category.uploaded_logo.height}}/>
  {{/if}}
</div>
