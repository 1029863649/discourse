<td>{{user-info user=item.user}}</td>
{{#each columns as |column|}}
  <td>
    {{#if column.automatic}}
      {{directory-item-value item column}}
    {{else}}
      {{directory-item-user-field-value item column}}
    {{/if}}
  </td>
{{/each}}

{{#if showTimeRead}}
  <td><span class="time-read">{{format-duration item.time_read}}</span></td>
{{/if}}
