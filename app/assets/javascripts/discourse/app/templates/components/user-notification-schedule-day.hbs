<tr class="day">
  <td class="day-label">{{dayLabel}}</td>
  <td>
    {{combo-box
      valueProperty="value"
      content=startTimeOptions
      value=startTimeValue
      onChange=onChangeStartTime
    }}
  </td>
  {{#if endTimeOptions}}
    <td class="to">{{i18n "user.notification_schedule.to"}}</td>
    <td>
      {{combo-box
        valueProperty="value"
        content=endTimeOptions
        value=endTimeValue
        onChange=onChangeEndTime
      }}
    </td>
  {{/if}}
</tr>
