{{#if this.item.truncated}}
  <a
    {{on "click" (action "toggleItem")}}
    href
    title={{i18n "post.expand_collapse"}}
    class={{if this.expanded "collapse-item" "expand-item"}}
  >
    {{#if this.expanded}}
      {{d-icon "chevron-up"}}
    {{else}}
      {{d-icon "chevron-down"}}
    {{/if}}
  </a>
{{/if}}