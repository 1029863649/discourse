{{#if field.value}}
  {{component previewComponent field=field fieldClass=fieldClass wizard=wizard}}
{{/if}}

<label class="wizard-container__button wizard-container__button-upload {{if uploading "disabled"}}">
  {{#if uploading}}
    {{i18n "wizard.uploading"}}
  {{else}}
    {{i18n "wizard.upload"}}
    {{d-icon "far-image"}}
  {{/if}}

  <input class="wizard-hidden-upload-field" disabled={{uploading}} type="file" accept="image/*">
</label>
