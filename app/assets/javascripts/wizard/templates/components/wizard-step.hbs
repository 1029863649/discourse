<div class="wizard-step-contents">
  {{#if step.title}}
    <h1 class="wizard-step-title">
      {{step.title}}
    </h1>
  {{/if}}
  {{#if bannerImage}}
    <img src={{bannerImage}} class="wizard-step-banner" />
  {{/if}}
  {{#if step.description}}
    <p class="wizard-step-description">
      {{{step.description}}}
    </p>
  {{/if}}
  {{#wizard-step-form step=step}}
    {{#each step.fields as |field|}}
      {{wizard-field field=field step=step wizard=wizard}}
    {{/each}}
  {{/wizard-step-form}}
</div>
<div class="wizard-step-footer">
  <div class="wizard-progress">
    <div class="white"></div>
    <div class="black" style={{barStyle}}></div>
    <div class="screen"></div>
    <span>
      {{bound-i18n
        "wizard.step"
        current=step.displayIndex
        total=wizard.totalSteps
      }}
    </span>
  </div>
  <div class="wizard-buttons">
    {{#if showQuitButton}}
      <a href class="action-link quit" tabindex="11" {{action "quit"}}>
        {{i18n "wizard.quit"}}
      </a>
    {{/if}}
    {{#if showFinishButton}}
      <button
        class="wizard-btn finish"
        disabled={{saving}}
        tabindex="10"
        {{action "exitEarly"}}
      >
        {{i18n "wizard.finish"}}
      </button>
    {{/if}}
    {{#if showBackButton}}
      <a href class="action-link back" tabindex="11" {{action "backStep"}}>
        {{i18n "wizard.back"}}
      </a>
    {{/if}}
    {{#if showNextButton}}
      <button
        class="wizard-btn next primary"
        disabled={{saving}}
        tabindex="10"
        {{action "nextStep"}}
      >
        {{i18n "wizard.next"}}
        {{d-icon "chevron-right"}}
      </button>
    {{/if}}
    {{#if showDoneButton}}
      <button
        class="wizard-btn done"
        disabled={{saving}}
        tabindex="10"
        {{action "quit"}}
      >
        {{i18n "wizard.done"}}
      </button>
    {{/if}}
  </div>
</div>